# Copy to .env and adjust as needed.
# WARNING: These values are local-development defaults only.
# Never use these credentials unchanged in shared or production environments.
NEXUS_ENVIRONMENT=dev
NEXUS_DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/nexus_babel
NEXUS_SCHEMA_MANAGEMENT_MODE=auto_create
NEXUS_NEO4J_URI=bolt://localhost:7687
NEXUS_NEO4J_USERNAME=neo4j
NEXUS_NEO4J_PASSWORD=neo4jpassword
NEXUS_CORPUS_ROOT=/Users/4jp/Workspace/organvm-i-theoria/nexus--babel-alexandria-
NEXUS_OBJECT_STORAGE_ROOT=/Users/4jp/Workspace/organvm-i-theoria/nexus--babel-alexandria-/object_storage
NEXUS_RAW_MODE_ENABLED=true
NEXUS_ASYNC_JOBS_ENABLED=true
NEXUS_PLUGIN_ML_ENABLED=false
NEXUS_SHADOW_EXECUTION_ENABLED=false
NEXUS_WORKER_POLL_SECONDS=1.0
NEXUS_WORKER_LEASE_SECONDS=30
NEXUS_WORKER_NAME=nexus-worker
NEXUS_BOOTSTRAP_KEYS_ENABLED=true
NEXUS_BOOTSTRAP_VIEWER_KEY=nexus-dev-viewer-key
NEXUS_BOOTSTRAP_OPERATOR_KEY=nexus-dev-operator-key
NEXUS_BOOTSTRAP_RESEARCHER_KEY=nexus-dev-researcher-key
NEXUS_BOOTSTRAP_ADMIN_KEY=nexus-dev-admin-key
# Production guidance:
# - set NEXUS_SCHEMA_MANAGEMENT_MODE=migrate_only (or off if managed externally)
# - set NEXUS_BOOTSTRAP_KEYS_ENABLED=false
# - set explicit NEXUS_CORPUS_ROOT and NEXUS_OBJECT_STORAGE_ROOT
